<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.MiCafe"
        tools:targetApi="31">

        <!-- Actividad principal -->
        <activity
            android:name=".MainActivity"
            android:label="Ejemplo SQLite"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividades adicionales -->
        <activity android:name=".Leer"
            android:label="Leer SQLite"
            android:exported="false"/>
        <activity android:name=".Editar"
            android:label="Actualizar SQLite"
            android:exported="false"/>
        <activity android:name=".MenuOpcionesActivity"
            android:exported="false"/>
        <activity android:name=".ComprarActivity"
            android:exported="false"/>
        <activity android:name=".PrepararCafeActivity"
            android:exported="false"/>

    </application>

</manifest>
