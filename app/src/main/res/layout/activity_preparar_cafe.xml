<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/fondo5">

    <!-- Título del CRUD -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="CRUD SQLite"
        android:textColor="@color/teal_700"
        android:textSize="30sp" />

    <!-- Campo Nombre -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:layout_marginEnd="8dp" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:id="@+id/et_nombre"
            android:hint="Ingrese nombre"
            android:inputType="textPersonName" />
    </LinearLayout>

    <!-- Campo Apellido -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellido:"
            android:layout_marginEnd="8dp" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:id="@+id/et_apellido"
            android:hint="Ingrese apellido"
            android:inputType="textPersonName" />
    </LinearLayout>

    <!-- Campo Edad -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edad:"
            android:layout_marginEnd="8dp" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:id="@+id/et_edad"
            android:hint="Ingrese edad"
            android:inputType="number" />
    </LinearLayout>

    <!-- Botones de Agregar y Ver -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btn_agregar"
            android:background="@drawable/add"
            android:contentDescription="Agregar" />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btn_ver"
            android:background="@drawable/view"
            android:contentDescription="Ver" />
    </LinearLayout>

    <!-- Botón Volver al Menú Principal -->
    <Button
        android:id="@+id/button_volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="volverMenuPrincipal"
        android:text="Volver al Menú Principal" />

</LinearLayout>
